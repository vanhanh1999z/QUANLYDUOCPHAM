
    <core:View height="100%" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:t="sap.ui.table" controllerName="app.PhieuThu.Edit">
        <Page showHeader="false">
            <content>
                <VBox class="sapUiSmallMargin">
                    <f:Form id="FormChange471" editable="true">
                        <f:toolbar>
                            <Toolbar id="TB1">
                                <Title text="Chỉnh sửa thông tin hàng hóa" />
                                <ToolbarSpacer />
                            </Toolbar>
                        </f:toolbar>

                        <f:layout>
                            <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="1" emptySpanL="1" emptySpanM="1" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>

        <f:FormElement label="ID">
            <f:fields>
                <Input id="maPhieu" editable="false" maxLength="255" value="{mainModel>/id}" />
            </f:fields>
        </f:FormElement>
        
        <f:FormElement label="Ngày thu">
            <f:fields>
                <Input id="ngayThu" editable="false" maxLength="255" value="{mainModel>/ngaythu}" />
            </f:fields>
        </f:FormElement>
        
        <f:FormElement label="Số tiền nộp">
            <f:fields>
                <Input id="soTienNop" editable="false" maxLength="255" value="{mainModel>/sotiennop}" />
            </f:fields>
        </f:FormElement>
        
        <f:FormElement label="Mã khách hàng">
            <f:fields>
                <Input id="maKH" editable="false" maxLength="255" value="{mainModel>/idkhach}" />
            </f:fields>
        </f:FormElement>
        
        <f:FormElement label="Tên quản lý">
            <f:fields>
                <Input id="tenQuanLy" editable="false" maxLength="255" value="{mainModel>/tenquanly}" />
            </f:fields>
        </f:FormElement>
        
        <f:FormElement label="Mã phiếu giao">
            <f:fields>
                <Input id="idPhieuGiao" editable="false" maxLength="255" value="{mainModel>/idphieugiao}" />
            </f:fields>
        </f:FormElement>
        
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                </VBox>

            </content>
            <footer>
                <Toolbar active="true">
                    <content>
                        <ToolbarSpacer />
                        <Button text="Hoàn tất" type="Accept" icon="sap-icon://accept" press="save" />
                        <Button text="Đặt lại" type="Ghost" icon="sap-icon://reset" press="clearForm" />
                        <Button text="Hủy bỏ" type="Reject" icon="sap-icon://cancel" press="onCancel" />
                    </content>
                </Toolbar>
            </footer>
        </Page>
    </core:View>
    