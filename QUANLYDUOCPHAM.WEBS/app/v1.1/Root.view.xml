<core:View height="100%" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:cc="app.ext.Controls" xmlns:mvc="sap.ui.core.mvc" controllerName="app.Root" class="sapUiSizeCompact">
  <Page id="appMainPage" showHeader="false" enableScrolling="false">
    <content>
      <tnt:ToolHeader>
        <Button id="sideNavigationToggleButton"
            icon="sap-icon://menu2"
            type="Transparent"
            press="toggleMasterMenu">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Button>
        <Title text="Quản lý kho dược phẩm - Lưu Văn Hạnh - 1721050283" wrapping="false" level="H1" class="sapUiVisibleOnlyOnDesktop">
        </Title>
        <ToolbarSpacer>
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px" />
          </layoutData>
        </ToolbarSpacer>
        <!--<cc:CoreOverflowToolbarButton type="Transparent" icon="sap-icon://message-popup" text="Thông báo" tooltip="Thông báo" press="onOpenNotitfication" notificationCount="{=${md_countNotif>/} >0? ${md_countNotif>/}: 0  }" />-->
        <Button type="Transparent" icon="sap-icon://message-popup" tooltip="Thông báo" press="onOpenNotitfication">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Button>
        <Button type="Transparent" icon="sap-icon://person-placeholder" tooltip="Tài khoản" press="onAccountClick">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Button>
      </tnt:ToolHeader>
      <ScrollContainer horizontal="false" vertical="false" width="100%" height="calc(100% - 3rem)">
        <SplitApp id="appRoot" mode="ShowHideMode">
        </SplitApp>
      </ScrollContainer>
    </content>
  </Page>
</core:View>